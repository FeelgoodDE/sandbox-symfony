parameters:
    # Title of the site
    # This will be as windows title as well as the title logo text
    site_title: "<%= @site_title %>"

    # Should the registration be enabled?
    # If this setting is set to false, user's can be created
    # through the use of app/console
    allow_registration: <%= @allow_registration %>

    # Should Google Analytics be enabled?
    enable_google_analytics: <%= @enable_analytics %>

    #Should user login be required?
    login_required: <%= @login_required %>

    # Database configurations
    database_driver:   <%= @db_driver %>
    database_host:     <%= @db_host %>
    database_port:     <%= @db_port %>
    database_name:     <%= @db_name %>
    database_user:     <%= @db_user %>
    database_password: <%= @db_pass %>

    # Mail Server settings
    mailer_transport:  <%= @mailer %>
    mailer_host:       <%= @mailer_host %>
    mailer_user:       <%= @mailer_user %>
    mailer_password:   <%= @mailer_pass %>

    # Locale of the application
    locale:            <%= @locale %>

    # Secret for the passwords
    secret:            <%= @secret %>

    # How many posts do we want to see per page
    posts_per_page:    10

    # How many subscription do we want to see in front page
    subscriptions_per_page: 10

    # How many groups do we want to see in group listing
    groups_per_page: 20

# twig section
twig:

    # global variables for twig templates
    globals:

        # Enable "Fork Me On Github" ribbon pn page
        show_forkme: true